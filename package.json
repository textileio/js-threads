{
  "name": "@textile/threads",
  "version": "0.0.1",
  "description": "Typescript implementation of Textile's Threads Protocol",
  "main": "dist/index",
  "types": "dist/index",
  "scripts": {
    "pretest": "npm run bootstrap && npm run lint && npm run build",
    "bootstrap": "lerna bootstrap",
    "build": "lerna run build",
    "lint": "eslint --fix --ext .js,.ts packages/*/src/**/*",
    "test": "npm run test:node && npm run test:browser",
    "test:node": "TS_NODE_FILES=true mocha",
    "test:browser": "lerna exec 'polendina --cleanup src/**/*.spec.ts --webpack-config ../../webpack.test.js'",
    "docs": "typedoc"
  },
  "author": "Textile <contact@textile.io>",
  "license": "MIT",
  "devDependencies": {
    "@types/chai": "^4.2.7",
    "@types/mocha": "^5.2.7",
    "@types/node": "^13.1.4",
    "@typescript-eslint/eslint-plugin": "^2.9.0",
    "@typescript-eslint/parser": "^2.9.0",
    "buffer": "^5.4.3",
    "chai": "^4.2.0",
    "eslint": "^6.7.2",
    "eslint-config-prettier": "^6.7.0",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-prettier": "^3.1.1",
    "husky": "^3.1.0",
    "lerna": "^3.19.0",
    "mocha": "^6.2.2",
    "polendina": "^1.0.0",
    "prettier": "^1.19.1",
    "rimraf": "^3.0.0",
    "ts-loader": "^6.2.1",
    "ts-node": "^8.5.4",
    "typedoc": "^0.15.3",
    "typedoc-plugin-lerna-packages": "^0.2.2",
    "typescript": "^3.7.2"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "dependencies": {}
}
