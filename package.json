{
  "name": "@textile/threads",
  "version": "0.0.1",
  "description": "Typescript implementation of Textile's Threads Protocol",
  "main": "dist/index",
  "types": "dist/index",
  "scripts": {
    "pretest": "npm run bootstrap && npm run lint",
    "bootstrap": "lerna bootstrap --hoist",
    "lint": "eslint --fix --ext .js,.ts packages/*/src/**/*",
    "test": "npm run test:node && npm run test:browser",
    "test:node": "TS_NODE_FILES=true mocha",
    "test:browser": "karma start karma.conf.js",
    "docs": "typedoc"
  },
  "author": "Textile <contact@textile.io>",
  "license": "MIT",
  "devDependencies": {
    "@ipld/block": "^2.1.3",
    "@types/chai": "^4.2.7",
    "@types/karma": "^3.0.4",
    "@types/mocha": "^5.2.7",
    "@types/node": "^12.12.21",
    "@types/sinon": "^7.5.1",
    "@typescript-eslint/eslint-plugin": "^2.9.0",
    "@typescript-eslint/parser": "^2.9.0",
    "buffer": "^5.4.3",
    "chai": "^4.2.0",
    "eslint": "^6.7.2",
    "eslint-config-prettier": "^6.7.0",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-prettier": "^3.1.1",
    "husky": "^3.1.0",
    "karma": "^4.4.1",
    "karma-chai": "^0.1.0",
    "karma-chrome-launcher": "^3.1.0",
    "karma-cli": "^2.0.0",
    "karma-firefox-launcher": "^1.2.0",
    "karma-mocha": "^1.3.0",
    "karma-safari-launcher": "^1.0.0",
    "karma-typescript": "^5.0.0-beta.0",
    "lerna": "^3.19.0",
    "mocha": "^6.2.2",
    "mocha-junit-reporter": "^1.23.1",
    "prettier": "^1.19.1",
    "rimraf": "^3.0.0",
    "sinon": "^7.5.0",
    "ts-node": "^8.5.4",
    "typedoc": "^0.15.3",
    "typedoc-plugin-lerna-packages": "^0.2.2",
    "typescript": "^3.7.2"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  }
}
