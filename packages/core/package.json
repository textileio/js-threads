{
  "name": "@textile/threads-core",
  "version": "0.1.24",
  "main": "dist/index",
  "types": "dist/index",
  "files": [
    "dist/**/!(*.spec).js?(.map)",
    "dist/**/!(*.spec).d.ts"
  ],
  "publishConfig": {
    "access": "public"
  },
  "license": "MIT",
  "scripts": {
    "prepublishOnly": "npm run build",
    "prepare": "npm run build:node",
    "prebuild": "npm run clean",
    "build": "npm run build:node && npm run build:browser",
    "build:node": "npm run compile",
    "build:browser": "webpack --mode production --config ../../webpack.config.js",
    "compile": "tsc -b tsconfig.json",
    "clean": "rimraf ./dist ./tsconfig.tsbuildinfo",
    "test:browser": "polendina --cleanup --timeout 60 src/**/*.spec.ts --webpack-config ../../webpack.test.js"
  },
  "repository": "github:textileio/js-threads",
  "references": [
    {
      "path": "../id"
    },
    {
      "path": "../multiaddr"
    },
    {
      "path": "../crypto"
    }
  ],
  "devDependencies": {
    "@types/multiaddr": "^7.2.0",
    "@types/node": "^14.0.5",
    "@types/varint": "^5.0.0",
    "cids": "^0.8.0",
    "rimraf": "^3.0.0",
    "typescript": "^3.7.2"
  },
  "dependencies": {
    "@ipld/block": "^4.0.0",
    "@textile/multiaddr": "^0.0.17",
    "@textile/threads-crypto": "^0.0.5",
    "@textile/threads-id": "^0.1.6",
    "@types/multibase": "^0.6.0",
    "multiaddr": "^7.4.2",
    "multibase": "^1.0.1",
    "multihashes": "1.0.1",
    "varint": "^5.0.0"
  },
  "gitHead": "40d7c6d2c3539aa273c112a6f918983ef704c179"
}
