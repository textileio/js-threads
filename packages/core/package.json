    "@types/multiaddr": "^7.2.0",
    "@types/varint": "^5.0.0",
    "cids": "^0.8.0",
    "multiaddr": "^7.2.1",
    "peer-id": "^0.13.9",
    "rimraf": "^3.0.0",
    "typescript": "^3.7.2"
  },
  "dependencies": {
    "@ipld/block": "^4.0.0",
    "@textile/multiaddr": "^0.0.5",
    "@textile/threads-id": "^0.0.5",
    "@types/multibase": "^0.6.0",
    "@types/node": "^14.0.1",
    "bs58": "^4.0.1",
    "libp2p-crypto": "^0.17.2",
