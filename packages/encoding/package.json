{
  "name": "@textile/threads-encoding",
  "version": "0.1.7",
  "main": "dist/index",
  "types": "dist/index",
  "browser": {
    "./coding": "./coding/browser"
  },
  "files": [
    "dist"
  ],
  "publishConfig": {
    "access": "public"
  },
  "license": "MIT",
  "scripts": {
    "prepublish": "npm run build",
    "prebuild": "npm run clean",
    "build": "npm run build:node && npm run build:browser",
    "build:node": "npm run compile",
    "build:browser": "webpack --mode production --config ../../webpack.config.js",
    "compile": "tsc -b tsconfig.json",
    "clean": "rimraf ./dist ./tsconfig.tsbuildinfo",
    "test:browser": "polendina --cleanup --timeout 60 src/**/*.spec.ts --webpack-config ../../webpack.test.js"
  },
  "dependencies": {
    "@ipld/block": "^4.0.0",
    "@textile/threads-core": "^0.1.7",
    "@types/node": "^14.0.1",
    "cids": "^0.8.0",
    "libp2p-crypto": "^0.17.2",
    "loglevel": "^1.6.6"
  },
  "references": [
    {
      "path": "../core"
    }
  ],
  "devDependencies": {
    "rimraf": "^3.0.0",
    "typescript": "^3.7.2"
  }
}
