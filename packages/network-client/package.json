{
  "name": "@textile/threads-network-client",
  "version": "0.2.0",
  "main": "dist/index",
  "types": "dist/index",
  "files": [
    "dist"
  ],
  "publishConfig": {
    "access": "public"
  },
  "license": "MIT",
  "scripts": {
    "prepublish": "npm run build",
    "prebuild": "npm run clean",
    "build": "npm run build:node && npm run build:browser",
    "build:node": "npm run compile",
    "build:browser": "webpack --mode production --config ../../webpack.config.js",
    "compile": "tsc -b tsconfig.json",
    "clean": "rimraf ./dist ./tsconfig.tsbuildinfo",
    "test:browser": "polendina --cleanup --timeout 60 src/**/*.spec.ts --webpack-config ../../webpack.test.js"
  },
  "repository": "github:textileio/js-threads",
  "dependencies": {
    "@improbable-eng/grpc-web": "^0.12.0",
    "@textile/threads-core": "^0.1.7",
    "@textile/threads-encoding": "^0.1.7",
    "@textile/threads-net-grpc": "^0.1.16",
    "cids": "^0.8.0",
    "libp2p-crypto": "^0.17.2",
    "loglevel": "^1.6.6",
    "next-tick": "^1.1.0",
    "peer-id": "^0.13.9"
  },
  "references": [
    {
      "path": "../core"
    },
    {
      "path": "../encoding"
    }
  ],
  "devDependencies": {
    "@types/next-tick": "^1.0.0",
    "@types/node": "^14.0.1",
    "isomorphic-ws": "^4.0.1",
    "rimraf": "^3.0.0",
    "typescript": "^3.7.2",
    "ws": "^7.2.1"
  }
}
