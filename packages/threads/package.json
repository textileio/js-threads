{
  "name": "@textile/threads",
  "version": "1.3.0",
  "description": "Components for building with Threads Database and Client.",
  "main": "dist/cjs/index.js",
  "types": "dist/cjs/index.d.ts",
  "module": "dist/esm/index.js",
  "files": [
    "dist/**/!(*.spec).js?(.map)",
    "dist/**/!(*.spec).d.ts"
  ],
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "prepublishOnly": "npm run clean && npm run build",
    "build": "npm run build:cjs && npm run build:esm",
    "build:cjs": "npx tsc -b ./tsconfig.json",
    "build:esm": "npx tsc -b ./tsconfig.esm.json",
    "clean": "npx rimraf ./dist"
  },
  "repository": "github:textileio/js-threads",
  "devDependencies": {
    "@improbable-eng/grpc-web": "^0.13.0"
  },
  "dependencies": {
    "@textile/crypto": "^0.1.2",
    "@textile/security": "^0.6.0",
    "@textile/threads-client": "^1.3.0",
    "@textile/threads-id": "^0.3.0",
    "fast-sha256": "^1.3.0"
  },
  "author": "Textile",
  "license": "MIT",
  "gitHead": "cdbfb3a09a606e1c3c90f052e5ee74afa5399a40"
}